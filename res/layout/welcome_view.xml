<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_input"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
    
    <EditText 
        android:id="@+id/edit_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"/>
    
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:onClick="saveNumber"/>
    
    <TextView 
        android:id="@+id/number_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_phone"/>
    
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZKOUŠKA SOS"
        android:onClick="startSos"/>
    
    <TextView 
        android:id="@+id/acc_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chyba"/>
    
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZKOUŠKA ZRYCHLENI"
        android:onClick="startZrychleni"/>

</LinearLayout>
